// --- REUSABLE COMPONENTS ---

function NavItem({ icon: Icon, label, id, active, set }) {
  const isActive = active === id;
  return (
    <button 
      onClick={() => set(id)} 
      style={{ transition: 'transform 0.1s ease-out' }}
      className="flex flex-col items-center justify-center gap-[3px] w-[50px] relative z-10 ios-press"
    >
      <Icon 
        size={24} 
        className={`relative z-10 transition-colors duration-150 ${isActive ? 'text-[#007AFF]' : 'text-[#3C3C434D]'}`} 
        strokeWidth={isActive ? 2.5 : 2} 
      />
      <span className={`text-[10px] font-medium transition-colors duration-150 tracking-[0.1px] ${isActive ? 'text-[#007AFF]' : 'text-[#3C3C434D]'}`}>
        {label}
      </span>
    </button>
  );
}